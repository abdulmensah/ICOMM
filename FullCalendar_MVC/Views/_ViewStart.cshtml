@*@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}*@

@{
    var controller = HttpContext.Current.Request.RequestContext.RouteData.Values["Controller"].ToString();

    string layout = "";
    if (controller == "Event")
    {
        layout = "~/Views/Shared/_LoginPartial.cshtml";
    }
    else
    {
        layout = "~/Views/Shared/_Layout.cshtml";
    }

    Layout = layout;
}