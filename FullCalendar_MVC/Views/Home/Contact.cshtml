<script>

        $(document).ready(function () {
            $('#FullName').rules("add", {
                required: true, messages: { required: "Full Name is required." }
            });
            $('#Email').rules("add", {
                required: true, messages: { required: "Email Address is required." }
            });

            $('#Message').rules("add", {
                required: true, messages: { required: "Message is required." }
            });

            $(".nav li").removeClass("active");//this will remove the active class from
            $('#lContact').addClass('active');






        });
        $('#main-contact-form').on('submit',function (e) {
                var datastring = $(this).serialize();
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("/SendContact")',
                    data: datastring,
                    dataType: 'json',
                    success: function (data) {
                        $('.validation-summary-errors').addClass('validation-summary-valid');
                        $('.validation-summary-errors').removeClass('validation-summary-errors');
                        $('.alert-success').show();
                        $('.alert-success').html(data);
                        $('#Message').val("");
                        $('#Phone').val("");
                        $('#Email').val("");
                        $('#FullName').val("");
                    }
                }); e.preventDefault();
            });
</script>
